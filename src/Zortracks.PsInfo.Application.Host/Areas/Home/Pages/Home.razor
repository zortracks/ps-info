@page "/"

@using Microsoft.AspNetCore.Components.Web
@using MudBlazor
@using Zortracks.PsInfo.Application.Host.Areas.Home.Resources

<MudContainer Class="main">
    <MudText Class="mb-20" Typo="Typo.h1" Align="Align.Center"><b>Assistance et Services informatiques</b></MudText>
</MudContainer>

<style>
    :root {
        --blur-size: blur(9px);
    }

    .main {
        position: relative;
        align-content: end;
        height: calc(100vh - var(--mud-appbar-height));
    }

        .main::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: -1;
            display: block;
            background: url('/img/network.jpg');
            background-size: cover;
            box-shadow: inset 0 0 0 100vh rgba(212, 69, 22, 0.6);
            width: 100%;
            height: 100%;
            -webkit-filter: var(--blur-size);
            -moz-filter: var(--blur-size);
            -o-filter: var(--blur-size);
            -ms-filter: var(--blur-size);
            filter: var(--blur-size);
        }
</style>