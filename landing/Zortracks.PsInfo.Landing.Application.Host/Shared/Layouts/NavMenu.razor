@using Microsoft.AspNetCore.Components.Routing
@using MudBlazor

<MudHidden Breakpoint="Breakpoint.MdAndUp" Invert>
    @foreach (var navigationElement in NavigationElements) {
        <MudButton Href="@navigationElement.Href" Color="GetColorForMenu(navigationElement)">@navigationElement.Title</MudButton>
    }
</MudHidden>

<MudHidden Breakpoint="Breakpoint.MdAndUp">
    <MudNavMenu>
        @foreach (var navigationElement in NavigationElements) {
            <MudNavLink Href="@navigationElement.Href" Icon="@navigationElement.Icon" Match="NavLinkMatch.All">@navigationElement.Title</MudNavLink>
        }
    </MudNavMenu>
</MudHidden>
